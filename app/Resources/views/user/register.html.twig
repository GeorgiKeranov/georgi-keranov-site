{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sweetalert.min.css') }}">
{% endblock %}

{% block body %}

<div class="container margin-top-50">

    {% if errorMessage is defined %}
        <span id="error" class="hidden">
            {{ errorMessage }}
        </span>
    {% endif %}

    <div class="form-group">
        <h1 class="text-center">Register</h1>
        <hr/>
    </div>

    <div class="row">
        <div class="col">
            {{ form_start(form) }}

            <div class="row">
                <div class="col-12 col-sm">
                    <div class="form-group">
                        {{ form_row(form.firstName, {'attr': {'class': 'form-control', 'placeholder': 'First name'}}) }}
                    </div>
                </div>

                <div class="col-12 col-sm">
                    <div class="form-group">
                        {{ form_row(form.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Last name'}}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm">
                    <div class="form-group">
                        {{ form_row(form.username, {'attr': {'class': 'form-control', 'placeholder': 'Username'}}) }}
                    </div>
                </div>

                <div class="col-12 col-sm">
                    <div class="form-group">
                        {{ form_row(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email'}}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12 col-sm">
                    <div class="form-group">
                        {{ form_row(form.password.first, {'attr': {'class': 'form-control', 'placeholder': 'Password'}}) }}
                    </div>
                </div>
                <div class="col-12 col-sm">
                    <div class="form-group">
                        {{ form_row(form.password.second, {'attr': {'class': 'form-control', 'placeholder': 'Confirm password'}}) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <input type="submit" value="Register" class="btn btn-primary btn-block"/>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/frameworks/sweetalert.min.js') }}"></script>
    <script src="{{ asset('js/users/register-error-alert.js') }}"></script>
{% endblock %}