{% extends 'base.html.twig' %}

{% block body %}
    <div class="container margin-top-50">

        <div class="row">

            <div class="col-4">

                <div class="row">
                    <div class="col text-center">
                        <img src="{{ asset('img/georgi-keranov.jpg') }}" class="index-image"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col text-center">
                        <span class="fa fa-phone icon"></span>
                        <span class="fa fa-arrow-right"></span>
                        <span class="details">089 876 7873</span>
                    </div>
                </div>

                <div class="row">
                    <div class="col text-center">
                        <span class="fa fa-envelope icon"></span>
                        <span class="fa fa-arrow-right"></span>
                        <span class="details">georgy.keranov@gmail.com</span>
                    </div>
                </div>

                <div class="row text-center social-icons icon-circle">
                    <div class="col-md-6">
                        <a href="https://github.com/GeorgiKeranov"><i class="fa fa-github github-icon"></i></a>
                    </div>
                    <div class="col-md-6">
                        <a href="https://www.linkedin.com/in/georgi-keranov-b927a212a/"><i class="fa fa-linkedin-square linkedin-icon"></i></a>
                    </div>
                </div>
            </div>


            <div class="col margin-top-50">

                <form>
                    <div class="form-group">
                        <div class="row">
                            <div class="col">
                                <label>Name:</label>
                                <input type="text" placeholder="Name" name="name" class="form-control"/>
                            </div>
                            <div class="col">
                                <label class="text-center">Email:</label>
                                <input type="email" placeholder="Email" name="email" class="form-control"/>
                            </div>
                            <div class="col">
                                <label class="text-center">Phone:   </label>
                                <input type="text" placeholder="Phone" name="phone" class="form-control"/>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col">
                                <textarea placeholder="Message" name="message" class="form-control textarea"></textarea>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col">
                                <input type="submit" class="btn btn-outline-success btn-block" value="Send">
                            </div>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
{% endblock %}