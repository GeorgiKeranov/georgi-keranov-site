{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/sweetalert.min.css') }}">
{% endblock %}

{% block body %}
    <div class="container">

        <div class="row">

            <div class="col-12 col-lg-4">

                <div class="row">
                    <div class="col text-center">
                        <img src="{{ asset('img/georgi-keranov.jpg') }}" class="index-image"/>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4 col-lg-12 mt-2 mt-md-0 mt-lg-3">
                        <span class="fa fa-phone icon"></span>
                        <span class="fa fa-arrow-right"></span>
                        <span class="details">089 876 7873</span>
                    </div>
                    
                    <div class="col-md-6 col-lg-12 mt-2 mt-md-0 mt-lg-3">
                        <span class="fa fa-envelope icon"></span>
                        <span class="fa fa-arrow-right"></span>
                        <span class="details">georgy.keranov@gmail.com</span>
                    </div>

                    <div class="col-6 col-md-1 col-lg-6 mt-2 mt-md-0 mt-lg-3 text-center social-icons icon-circle">
                        <a target="_blank" href="https://github.com/GeorgiKeranov"><i class="fa fa-github"></i></a>
                    </div>
                    <div class="col-6 col-md-1 col-lg-6 mt-2 mt-md-0 mt-lg-3 text-center social-icons icon-circle">
                        <a target="_blank" href="https://www.linkedin.com/in/georgi-keranov-b927a212a/"><i class="fa fa-linkedin-square"></i></a>
                    </div>
                    
                </div>
                
            </div>


            <div class="col-12 col-lg-8 mt-lg-3">
                
                <hr/>
                <h3 class="text-center">Send Message</h4>
                <hr/>

                <div class="form-group">
                    <div class="row">
                        <div class="col-12 col-sm mt-2 mt-sm-0">
                            <label>Name:</label>
                            <input type="text" placeholder="Name" id="name" class="form-control"
                                   value="{% if app.user %}{{ app.user.firstName }} {{ app.user.lastName }}{% endif %}"/>
                        </div>
                        <div class="col-12 col-sm mt-2 mt-sm-0">
                            <label>Email:</label>
                            <input type="email" placeholder="Email" id="email" class="form-control"
                                   value="{% if app.user %}{{ app.user.email }}{% endif %}"/>
                        </div>
                        <div class="col-12 col-sm mt-2 mt-sm-0">
                            <label>Phone:</label>
                            <input type="text" placeholder="Phone (Not required)" id="phone" class="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col mt-2 mt-sm-0">
                            <input type="text" placeholder="Title (Not required)" id="title" class="form-control"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <textarea placeholder="Message" id="message" class="form-control textarea"></textarea>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <button class="btn btn-outline-success btn-block" onclick="sendMessage()">Send</button>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>


    <style>
        .row {
           margin-top: 10px;
        }
    </style>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('js/frameworks/sweetalert.min.js') }}"></script>
    <script src="{{ asset('js/message/send-message.js') }}"></script>
{% endblock %}