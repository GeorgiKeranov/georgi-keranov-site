{% extends 'base.html.twig' %}

{% block body %}

    <div class="container margin-top-50">
        <div class="row">

            {% for project in projects %}
            <div class="col-md-6 margin-bot-50">
                <h3 class="text-center">{{ project.name }}</h3>
                {% if project.imageName %}
                    <img src="../uploads/images/{{ project.imageName }}" class="img-thumbnail center"/>
                {% endif %}
                {% if not project.imageName %}
                <img src="{{ asset('img/no-image-avalible.png') }}" class="img-thumbnail center"/>
                {% endif %}

                <div class="row margin-top-10">
                    <div class="col">
                        <p class="desc">Programming languages:</p>
                        <h5>{{ project.programmingLanguages }}</h5>
                    </div>
                    <div class="col">
                        <p class="desc">Technologies used: </p>
                        <h5>{{ project.technologiesUsed }}</h5>
                    </div>
                </div>

                <a href="{{ path('project_view', {'name': project.name}) }}" class="btn btn-outline-info btn-block">Read more</a>
            </div>
            {% endfor %}

        </div>
    </div>

{% endblock %}