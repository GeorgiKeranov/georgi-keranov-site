{% extends 'base.html.twig' %}

{% block body %}

    <div class="container margin-top-50">

        <h2 class="text-center">Message</h2>
        <hr/>

        <div class="row">
            <div class="col-md-6">
                <div class="description">
                    {% if message.title %}
                        <h5 class="text-center">{{ message.title }}</h5>
                        <hr/>
                    {% endif %}
                    {{ message.message }}
                </div>
            </div>
            <div class="col-md-6">
                <h3>From: {{ message.name }}</h3>
                <h3>Email: {{ message.email }}</h3>
                {% if message.phone %}
                    <h3>Phone: {{ message.phone }}</h3>
                {% endif %}
                <h3>Date: {{ message.dateSent|date('H:i, d F Y') }}</h3>
            </div>
        </div>

    </div>

{% endblock %}